{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Add useful VS Code extensions for C++ development
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"twxs.cmake"
			],
			"settings": {
				"cmake.configureOnOpen": true
			}
		}
	},
	// Run after container is created to verify installation
	"postCreateCommand": "gcc --version && cmake --version",
	// Run as non-root user for better security
	"remoteUser": "vscode"
}